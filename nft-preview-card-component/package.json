{
  "scripts": {
    "dev": "concurrently \"npm run start-dev\" \"npm run css-dev\"",
    "prod": "concurrently \"npm run start-prod\" \"npm run css-prod\"",
    "css-dev": "TAILWIND_MODE=watch postcss ./styles.css -o dist/styles.css -w --verbose",
    "css-prod": "NODE_ENV=production postcss ./styles.css -o dist/styles.css",
    "start-dev": "npx webpack -w --config webpack.config.js --mode development",
    "start-prod": "npx webpack -w --config webpack.config.js --env production"
  },
  "dependencies": {
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "postcss-cli": "^9.0.2"
  }
}
